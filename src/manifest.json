{
  "name": "IH Bookmarks",
  "description": "Third-party solution for bookmarking posts and comments on Indie Hackers",
  "manifest_version": 2,
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "background": {
    "scripts": ["./background.bundle.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://api.gumroad.com/*",
    "https://www.indiehackers.com/post/*",
    "storage",
    "unlimitedStorage"
  ],
  "version": "1.3.2"
}